<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory android:title="General">
        <ListPreference
            android:defaultValue="@string/theme_system_default"
            android:entries="@array/theme_preference"
            android:entryValues="@array/theme_preference"
            android:key="theme_preference"
            android:title="Theme"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

    <PreferenceCategory android:title="Clock">
        <ListPreference
            android:defaultValue="@string/clock_digital"
            android:enabled="false"
            app:useSimpleSummaryProvider="true"
            android:entries="@array/clock_style_preference"
            android:entryValues="@array/clock_style_preference"
            android:key="clock_style_preference"
            android:title="Style"/>
        <SwitchPreference
            android:defaultValue="true"
            android:key="display_labels_preference"
            android:title="Display labels" />
        <SwitchPreference
            app:useSimpleSummaryProvider="true"
            android:defaultValue="false"
            android:key="display_seconds_preference"
            android:title="Display time with seconds" />
        <SwitchPreference
            android:defaultValue="false"
            android:key="blinking_separator_preference"
            android:title="Blinking separators"
            app:useSimpleSummaryProvider="true" />
        <Preference
            android:key="date_time"
            android:title="@string/open_time_settings">
        <intent
            android:action="android.settings.DATE_SETTINGS"/>
        </Preference>
    </PreferenceCategory>


</PreferenceScreen>