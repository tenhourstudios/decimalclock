<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory android:title="General">
        <ListPreference
            app:useSimpleSummaryProvider="true"
            android:defaultValue="Other"
            android:entries="@android:array/emailAddressTypes"
            android:entryValues="@android:array/emailAddressTypes"
            android:key="theme_preference"
            android:title="Theme" />
    </PreferenceCategory>

    <PreferenceCategory android:title="Clock">
        <ListPreference
            android:defaultValue="Digital"
            android:enabled="false"
            app:useSimpleSummaryProvider="true"
            android:entries="@android:array/emailAddressTypes"
            android:entryValues="@android:array/emailAddressTypes"
            android:key="clock_style_preference"
            android:title="Style"/>
        <SwitchPreference
            app:useSimpleSummaryProvider="true"
            android:defaultValue="false"
            android:key="display_seconds_preference"
            android:title="Display time with seconds" />
        <SwitchPreference
            android:defaultValue="false"
            android:key="display_labels_preference"
            android:title="Display labels" />
        <SwitchPreference
            android:defaultValue="false"
            android:key="blinking_separator_preference"
            android:title="Blinking separators"
            app:useSimpleSummaryProvider="true" />
        <ListPreference
            app:useSimpleSummaryProvider="true"
            android:defaultValue="1"
            android:entries="@android:array/emailAddressTypes"
            android:entryValues="@android:array/emailAddressTypes"
            android:key="timezone_preference"
            android:title="Timezone"/>
    </PreferenceCategory>


</PreferenceScreen>